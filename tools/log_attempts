#!/bin/bash

# Define the log file to monitor
LOGFILE="/var/log/auth.log"

# Define the search patterns for successful and unsuccessful login attempts
SUCCESS_PATTERN="Accepted"
FAILURE_PATTERN="Failed"

# Continuously monitor the log file for new entries
tail -f "$LOGFILE" | while read line
do
  # Check if the line contains a successful login attempt
  if echo "$line" | grep -q "$SUCCESS_PATTERN"; then
    echo "Successful login attempt detected: $line"
  fi

  # Check if the line contains an unsuccessful login attempt
  if echo "$line" | grep -q "$FAILURE_PATTERN"; then
    echo "Unsuccessful login attempt detected: $line"
  fi
done
